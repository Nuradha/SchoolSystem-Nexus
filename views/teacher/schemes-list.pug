extends ../newLayout
block content
  .signup__container
    .container__child.signup__form
      .circularText
        div
          each val,i in data
            ul.list-group.list-group-flush
              li.list-group-item= 'Filename : '+val.fileName
              li.list-group-item= 'Year : '+val.year
              li.list-group-item= 'Grade : '+val.grade 
            .input-group-append
              a.btn1.input-group-text(href='/teacher/scheme/'+i) Edit
              a.input-group-text.delete(id=val._id, href='#') Delete
              a.input-group-text(href='/uploads/schemes/'+val.fileName, download='') Download
        .input-group-append
          a.input-group-text(href='/teacher/schemes') Go Back
  script.
    $(document).ready(function(){
      $('.delete').on('click',function(){
        $.ajax({
          type:'DELETE',
          url:'/teacher/schemes/delete/'+this.id,
          success:function(){
            location.reload();
          }
        });
      });
    });
