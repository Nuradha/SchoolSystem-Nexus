extends ../newLayout
block content
  .form-group
  div
    // <%for(var i=0;i<data.length;i++){%>
    each val, i in data
      ul.list-group.list-group-flush
        li.list-group-item= 'Filename : '+val[i].fileName
        li.list-group-item= 'Filename : '+val[i].grade 
      .input-group-append
        a.input-group-text.delete(id=val[i]._id, href='#') Delete
        a.input-group-text(href='/uploads/circulars/'+val[i].fileName, download='') Download
  .input-group-append
    a.input-group-text(href='/principal/circulars') Go Back
script.
  $(document).ready(function(){
    $('.delete').on('click',function(){
      $.ajax({
        type:'DELETE',
        url:'/principal/circulars/delete/'+this.id,
        success:function(){
          location.reload();
        }
      });
    });
  });
