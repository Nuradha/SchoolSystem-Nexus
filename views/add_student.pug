html
  head
    title SchoolSystem
    link(rel = "stylesheet" href = "/css/registration.css")
    link(rel = "stylesheet" href = "/bower_components/bootstrap/dist/css/bootstrap.css")
  body
    .signup__container
      //.container__child.signup__thumbnail
      //  .signup__overlay
      .container__child.signup__form
        form(method='POST', action='/add/student')
          .form-group
            label(for='username') Username
            input.form-control(type='text', name='username', placeholder='james.bond', required='')
          .form-group
            label(for='email') Email
            input.form-control(type='text', name='email', placeholder='james.bond@spectre.com', required='')
          .form-group
            label(for='password') Password
            input.form-control(type='password', name='password', placeholder='********', required='')
          .form-group
            label(for='passwordRepeat') Repeat Password
            input.form-control(type='password', name='passwordRepeat', placeholder='********', required='')
          .m-t-lg
            ul.list-inline
              li
                input.btn.btn--form(type='submit', value='Register')
    script(src = '/bower_components/jquery/dist/jquery.js')
    script(src = '/bower_components/bootstrap/dist/js/bootstrap.js')
