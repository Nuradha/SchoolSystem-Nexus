extends ./index
block content
  .container(style = "width = 750px")
    .signup__container
      //.container__child.signup__thumbnail
      //  .signup__overlay
      .container__child.signup__form
        != messages('message', locals)
        if errors
          each error, i in errors
            div(class="alert alert-danger") #{error.msg}
        form(method='POST', action='/users/changepassword')
          .form-group
            label(for='current_password') Current Password
            input.form-control(type='password', name='current_password', placeholder='********', required='')
          .form-group
            label(for='new_password') New Password
            input.form-control(type='password', name='new_password', placeholder='********', required='')
          .form-group
            label(for='repeat_password') Repeat Password
            input.form-control(type='password', name='repeat_password', placeholder='********', required='')
          .m-t-lg
            ul.list-inline
              li
                input.btn.btn--form(type='submit', value='Change Password')          
